import requests
from bs4 import BeautifulSoup
r = requests.get("import requestshttps://store.steampowered.com/specials#p=0&tab=TopSellers")
soup = BeautifulSoup(r.content,"lxml")
games = soup.find_all("div",attrs={"class":"tab_item_content"})
for game in games:
    print(game.div.text)
    print(game.find("div",attrs={"class":"discount_pct"}))
         
 
